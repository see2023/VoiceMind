{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "meeting_assistant (macOS)",
			"cwd": "${workspaceFolder}/meeting_assistant",
			"request": "launch",
			"type": "dart",
			"flutterMode": "debug",
			"program": "${workspaceFolder}/meeting_assistant/lib/main.dart",
			"deviceId": "macos"
		},
		{
			"name": "Python Server",
			"type": "debugpy",
			"request": "launch",
			"program": "main.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}/python_backend"
		},
		{
			"name": "Python Debugger: Current File with Arguments",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}/python_backend",
		}
	]
}